{
  "name": "ewm-scm",
	"displayName": "vscode-EWM",
	"description": "The SCM extension for Engineering Workflow Manger.",
	"version": "0.0.8",
  "license": "MIT",
	"engines": {
    "vscode": "^1.96.0"
  },
  "private": true,
  "icon": "images/EWM_SC_icon.jpg",
  "categories": [
    "SCM Providers"
  ],
  "activationEvents": [
    "workspaceContains:.jazz5"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "ewm-scm.ewmInit",
        "title": "Init",
        "category": "EWM"
      },
      {
        "command": "ewm-scm.ewmUpdate",
        "title": "Update Status",
        "category": "EWM"
      },
      {
        "command": "ewm-scm.checkin",
        "title": "Check-in",
        "category": "EWM"
      },
      {
        "command": "ewm-scm.showOutput",
        "title": "Show output",
        "category": "EWM"
      },
      {
        "command": "ewm-scm.refresh",
        "title": "Refresh repository",
        "category": "EWM"
      },
      {
        "command": "ewm-scm.open",
        "title": "Open file",
        "category": "EWM"
      }
      
    ],
    "menus": {
			"scm/resourceState/context": [
				{
					"command": "ewm-scm.checkin",
          "when": "scmProvider == ewm && scmResourceGroup == unresolved",
          "group": "navigation"
				},
        {
					"command": "ewm-scm.open",
          "when": "scmProvider == ewm",
          "group": "navigation"
				}
			]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "file-type": "^16.5.4",
    "@types/vscode": "^1.96.0",
    "@types/mocha": "^10.0.10",
    "mocha": "^11.0.1",
    "@types/node": "20.x",
    "@types/which": "^1.3.0",
    "@typescript-eslint/eslint-plugin": "^8.17.0",
    "@typescript-eslint/parser": "^8.17.0",
    "eslint": "^9.16.0",
    "typescript": "^5.7.2",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "@vscode/iconv-lite-umd":"^0.7.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Markusimus/ewm-scm.git"
  },
  "homepage": "https://github.com/Markusimus/ewm-scm/blob/main/README.md"
}
